<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".MainActivity"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:background="@color/md_theme_light_background"

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/md_theme_light_background"
            android:orientation="horizontal"
            android:paddingStart="10dp"
            android:paddingTop="10dp"
            android:paddingEnd="10dp"
            android:paddingBottom="10dp">

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="@color/md_theme_light_surface"
                android:textColor="@color/md_theme_light_onSurface"
                android:elevation="8dp"
                android:stateListAnimator="@null"

                android:id="@+id/elevatedButtonToday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Сегодня" />

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="@color/md_theme_light_surface"
                android:textColor="@color/md_theme_light_onSurface"
                android:elevation="8dp"
                android:stateListAnimator="@null"

                android:id="@+id/elevatedButtonTomorrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Завтра" />

            <Button
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:backgroundTint="@color/md_theme_light_surface"
                android:textColor="@color/md_theme_light_onSurface"
                android:elevation="8dp"
                android:stateListAnimator="@null"

                android:id="@+id/elevatedButtonAfterday"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Послезавтра" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            app:cardCornerRadius="15dp"
            android:backgroundTint="@color/md_theme_light_surfaceVariant"

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp" >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp">

                <TextView
                    android:id="@+id/textCountry"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textCity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textCondition"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textTemperature"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textFeelslike"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textWind"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
                <TextView
                    android:id="@+id/textCloud"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="TextView"
                    android:textSize="20sp"
                    android:textColor="@color/md_theme_light_onSurfaceVariant" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>

</RelativeLayout>